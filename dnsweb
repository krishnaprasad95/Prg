#include<stdio.h>2.#include<stdlib.h>3.#include<errno.h>4.#include<netdb.h>5.#include<sys/types.h>6.#include<sys/socket.h>7.#include<netinet/in.h>int main(int argc,char*argv[1])8.{9.struct hostent *hen;if(argc!=2)10.{11.fprintf(stderr,"Enter the hostname\n");exit(1);12.}13.hen=gethostbyname(argv[1]);14.if(hen==NULL){fprintf(stderr,"Hostnot found \n");15.}16.printf("Hostname is %s \n",hen->h_name);17.printf("IP address is %s \n",inet_ntoa(*((struct in_addr *)hen->h_addr)));18.}
